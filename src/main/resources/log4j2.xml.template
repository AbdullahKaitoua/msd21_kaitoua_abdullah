<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN"  name="Calculator" packages="">
    <Appenders>
        <File name="logger" fileName="logs/calculator.log">
            <PatternLayout pattern="%highlight{%d [%t] %-5level: %msg%n%throwable}"/>
        </File>
    </Appenders>
    <Loggers>

        <Root level= "trace">
            <AppenderRef ref="logger"/>
        </Root>
    </Loggers>
</Configuration>